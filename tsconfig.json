{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react-jsxdev",
    "jsxImportSource": "@emotion/react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/client/*"],
      "#/*": ["./src/server/*"],
    },
  },
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
