{
  "name": "mauro-taliente-web",
  "version": "1.0.4",
  "description": "Mauro taliente personal site",
  "repository": {
    "type": "git",
    "url": "https://github.com/MauroTaliente/MauroTaliente/"
  },
  "author": "Mauro Taliente",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "ts-node --esm server.ts",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "build:client": "vite build --outDir dist/client",
    "build": "yarn run build:client && yarn run build:server",
    "serve": "cross-env NODE_ENV=production ts-node --esm server.ts",
    "generate": "vite build --outDir dist/static && yarn run build:server && ts-node --esm prerender.ts",
    "clean": "rimraf dist/",
    "deploy:gh-pages": "gh-pages -d dist/static",
    "prettier": "prettier --write .",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "autoprefixer": "^10.4.8",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "4.18.1",
    "facepaint": "^1.2.1",
    "gh-pages": "^5.0.0",
    "nodemon": "^2.0.19",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-emotion-styles-guide": "^0.5.0",
    "react-router-dom": "^6.3.0",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.10.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/color": "^3.0.3",
    "@types/compression": "1.7.2",
    "@types/eslint": "8.4.6",
    "@types/express": "^4.17.13",
    "@types/facepaint": "^1.2.2",
    "@types/node": "18.7.14",
    "@types/ramda": "^0.28.20",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-react": "^2.0.1",
    "csstype": "^3.1.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-react": "^7.31.6",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^20.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "typescript": "4.8.2",
    "vite": "3.0.9",
    "vitest": "^0.23.0"
  }
}
